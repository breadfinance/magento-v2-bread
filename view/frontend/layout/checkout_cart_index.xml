<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Bread_BreadCheckout::bread/css/bread.css"/>
    </head>
    <body>
        <referenceContainer name="checkout.cart.totals.container">
            <block template="Bread_BreadCheckout::breadcheckout/checkout_cart_summary.phtml" class="Bread\BreadCheckout\Block\Checkout\Overview" name="checkout.cart.custom.block" after="checkout.cart.totals"  />
        </referenceContainer>
        <referenceContainer name="checkout.cart.methods">
            <block template="Bread_BreadCheckout::breadcheckout/cartview.phtml" class="Bread\BreadCheckout\Block\Checkout\Overview" as="breadcheckout.checkout.view" name="breadcheckout.checkout.view"/>
        </referenceContainer>
    </body>
</page>
