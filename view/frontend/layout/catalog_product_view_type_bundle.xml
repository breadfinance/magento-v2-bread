<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="breadcheckout.product.view" remove="true"/>
        <referenceBlock name="breadcheckout.checkout.options" remove="true"/>

        <referenceContainer name="product.info.extrahint">
            <block class="Magento\Bundle\Block\Catalog\Product\View\Type\Bundle" name="breadcheckout.bundle.view" template="Bread_BreadCheckout::breadcheckout/bundle.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Bread\BreadCheckout\ViewModel\Product\Type\Bundle</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
